<?xml version="1.0" encoding="UTF-8"?>

<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="annonce">
		<class>fr.treeptik.pojo.User</class>
		<class>fr.treeptik.pojo.Annonce</class>
		

		<properties>

			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/annonce" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="root" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />

			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hialidate.archive.autodetection" value="class, hbm" />
			<property name="hibernate.hbm2ddl.auto" value="validate" />

			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.generate_statistics" value="true" />

		</properties>
	</persistence-unit>

</persistence>